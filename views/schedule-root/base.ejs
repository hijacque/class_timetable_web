<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../base') %>
        <title>Edit Schedule</title>
        <link rel="stylesheet" href="/styles/schedule-root.css">
</head>

<body>
    <div class="app-bar bg-light">
        <% if (category == "faculty") { %>
            <a type="button" onclick="window.location.href = '/chair/schedules?term=<%= term.code %>'">
                <i class="fas fa-arrow-left fa-2x"></i>
            </a>
        <% } else { %>
            <a onclick="window.location.href = '/chair/schedules?term=<%= term.id %>&course=<%= category %>'"
                type="button" >
                <i class="fas fa-arrow-left fa-2x"></i>
            </a>
        <% } %>
        <h5 class="panel-title text-muted my-0"><%- term.title %></h5>
        <div></div>
    </div>
    <% if (category == "faculty") { %>
        <%- include('faculty', {deptClasses:schedule.deptClasses, otherClasses:schedule.otherClasses}) %>
    <% } else { %>
        <%- include('blocks') %>
    <% } %>
    
    <!-- MDB -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.0/mdb.min.js"></script>
    <script>
        const newClassForm = new mdb.Modal(document.getElementById('add-class'));
    </script>
</body>
</html>